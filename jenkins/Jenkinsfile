pipeline {
    agent any
    tools {
        maven 'maven-3'
    }
    options {
        buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '', daysToKeepStr: '', numToKeepStr: '5')
        disableConcurrentBuilds()
        skipDefaultCheckout()
    }
    stages {
        stage('Clean up') { 
            steps {
                deleteDir()
            }
        }
        stage('Clone') {
            steps {
                git credentialsId: '4f8dcf06-a320-4afd-914d-d7fa62be287c', branch:'master', url: 'git@github.com:ddrobnjak/simple-java-maven-app.git'
            }
        }
        stage('Build') {
            steps {
                echo "1-${env.GIT_BRANCH}"
                echo "2-$env.GIT_BRANCH"
                echo '3-${BUILD_NUMBER}'
                echo '4-$BUILD_NUMBER'
                sh "mvn -B clean package -Dv=${env.GIT_LOCAL_BRANCH}"
            }
        }
        
    }
    post {
        success {
                archiveArtifacts artifacts: 'target/*.jar', followSymlinks: false
        } 
    }
}
