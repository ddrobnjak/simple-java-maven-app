def changeName() {
  sh """
        for file in \\${env.WORKSPACE}\\/target/*.jar
        do
            branch="test"
            basename=\\${file%*.}\\
            extension=\\${file##.*}\\            
            mv \$file \$basename-\$branch.\$extension
        done
   """
}
pipeline {
    agent any
    tools {
        maven 'maven-3'
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
        disableConcurrentBuilds()
        skipDefaultCheckout()
    }
    stages {
        stage('Clean up') { 
            steps {
                deleteDir()
            }
        }
        stage('Clone') {
            steps {
                git credentialsId: '4f8dcf06-a320-4afd-914d-d7fa62be287c', url: 'git@github.com:ddrobnjak/simple-java-maven-app.git'
            }
        }
        stage('Build') {
            steps {
                sh "mvn -B clean package -DskipTests"
                changeName()
            }
        }
        
    }
    post {
        success {
                archiveArtifacts artifacts: 'target/*.jar', followSymlinks: false
        } 
    }
}
